# Django Exam Portal Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
DJANGO_ENV=development  # Options: development, staging, production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here

# Debug mode - NEVER set to True in production
DEBUG=True

# Allowed hosts - comma-separated list of hostnames
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=exam_portal
DB_USER=root
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=3306

# =============================================================================
# MONGODB CONFIGURATION (if used)
# =============================================================================
MONGO_DB_NAME=examportal
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_URI=mongodb://localhost:27017/examportal

# =============================================================================
# SECURITY HEADERS AND HTTPS
# =============================================================================
# Set to True in production with HTTPS
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Session and CSRF security
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file upload size in bytes (default: 100MB)
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600
DATA_UPLOAD_MAX_NUMBER_FIELDS=100000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/exam_portal.log

# =============================================================================
# EXAM PORTAL SPECIFIC CONFIGURATION
# =============================================================================
# DAT file converter passphrase
CONVERTER_PASSPHRASE=bharat

# Exam unified DAT enabled
EXAM_UNIFIED_DAT_ENABLED=True

# =============================================================================
# EMAIL CONFIGURATION (if needed)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# CACHE CONFIGURATION (Redis - optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300